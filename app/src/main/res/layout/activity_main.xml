<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/back" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/centline"
        android:layout_centerInParent="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/i1a"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginHorizontal="18dp"
            android:src="@drawable/s_6" />

        <ImageView
            android:id="@+id/i2a"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginHorizontal="16dp"
            android:src="@drawable/s_7" />

        <ImageView
            android:id="@+id/i3a"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginHorizontal="15dp"
            android:src="@drawable/s_8" />

        <ImageView
            android:id="@+id/i4a"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginHorizontal="16dp"
            android:src="@drawable/s_9" />

        <ImageView
            android:id="@+id/i5a"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginHorizontal="18dp"
            android:src="@drawable/s_10" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/centline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginVertical="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/i1b"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginHorizontal="18dp"
            android:src="@drawable/s_1" />

        <ImageView
            android:id="@+id/i2b"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginHorizontal="16dp"
            android:src="@drawable/s_2" />

        <ImageView
            android:id="@+id/i3b"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginHorizontal="15dp"
            android:src="@drawable/s_3" />

        <ImageView
            android:id="@+id/i4b"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginHorizontal="16dp"
            android:src="@drawable/s_4" />

        <ImageView
            android:id="@+id/i5b"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginHorizontal="18dp"
            android:src="@drawable/s_5" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/centline"
        android:layout_centerInParent="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/i1c"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginHorizontal="18dp"
            android:src="@drawable/s_9" />

        <ImageView
            android:id="@+id/i2c"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginHorizontal="16dp"
            android:src="@drawable/s_5" />

        <ImageView
            android:id="@+id/i3c"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginHorizontal="15dp"
            android:src="@drawable/s_11" />

        <ImageView
            android:id="@+id/i4c"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginHorizontal="16dp"
            android:src="@drawable/s_8" />

        <ImageView
            android:id="@+id/i5c"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginHorizontal="18dp"
            android:src="@drawable/s_3" />
    </LinearLayout>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="100dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4">

            <TextView
                android:id="@+id/currency"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="3dp"
                android:fontFamily="@font/aclonica"
                android:gravity="center_vertical"
                android:text="10000"
                android:textColor="@color/white" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4">

            <TextView
                android:id="@+id/payment"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="3dp"
                android:fontFamily="@font/aclonica"
                android:text=" 25"
                android:textColor="@color/white" />

            <ImageView
                android:id="@+id/dec"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="23dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/b_minus_button" />

            <ImageView
                android:id="@+id/inc"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/b_plus_button" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:orientation="horizontal"
            android:paddingLeft="15dp">

            <ImageView
                android:id="@+id/max"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginVertical="3dp"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@drawable/b_max_bet_button" />

            <ImageView
                android:id="@+id/spinger"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@drawable/b_spin_button" />

            <ImageView
                android:id="@+id/turbo_spinger"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginVertical="3dp"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@drawable/b_autospin_button" />

        </LinearLayout>
    </androidx.appcompat.widget.LinearLayoutCompat>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="15dp"
        android:src="@drawable/b_info_button" />

</RelativeLayout>